<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="#FFFFFF"
    android:background="@drawable/border_notification"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <ImageView
                android:id="@+id/img_teacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center"
                android:src="@drawable/avatar"></ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/muli_bold"
            android:text="Nguyễn Ngọc Châu"
            android:textColor="@color/black"
            android:textSize="19dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8CCCA"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/muli_extrabold"
            android:text="Title ABC "
            android:textColor="#0B0B0B"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:text="Ngày mai các em được nghĩ học, nhớ thông báo đến các bạn cùng lớp giúp thầy"
            />

        <TextView
            android:id="@+id/tv_timeCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/muli"
            android:text="Create at:"
            android:textAlignment="textEnd"
            android:textSize="14dp"
            android:layout_marginStart="15dp"
            android:textColor="#C9000000"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            tools:ignore="RtlCompat">

        </TextView>
        <TextView
            android:id="@+id/tvClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Class: "
            android:textSize="17dp"
            android:fontFamily="@font/muli_bold"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>