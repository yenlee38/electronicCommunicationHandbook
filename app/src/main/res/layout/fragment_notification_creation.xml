<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.teacher.notification.NotificationFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/muli_bold"
        android:text="Class"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerClass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:foreground="@drawable/border_spinner"
        android:pointerIcon="hand" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/muli_bold"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_edittext"
        android:fontFamily="sans-serif-black"
        android:hint="Enter your title"
        android:paddingStart="10dp"
        android:scrollbars="vertical"
        android:textColorHint="#A19C9C"
        android:textSize="21dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/muli_bold"
        android:text="Content"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_edittext"
        android:fontFamily="@font/muli_bold"
        android:hint="Enter your content"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:layoutDirection="locale"
        android:paddingStart="10dp"
        android:scrollbars="vertical"
        android:gravity="top"
        android:textSize="18dp"
        android:text=""
        android:textColorHint="#A19C9C" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_message_home"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>