<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"

    tools:context=".ui.student.ConfirmationRequest.SuccessfulRequestFragment">
    <LinearLayout
        android:padding="@dimen/size_min"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="55dp"
            android:id="@+id/btn_success_to_board"
            android:backgroundTint="@color/black"
            android:layout_height="match_parent"
            android:background="@drawable/ic_arrow_back"
            android:textSize="18dp">
        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size_min"
            android:text="Successfully!!!"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_width="match_parent"

        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:layout_margin="@dimen/size_medium"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"

            android:id="@+id/imgSuccess"
            android:layout_width="106dp"
            android:layout_height="106dp"

            android:src="@drawable/ic_task_alt" />

        <TextView
            android:id="@+id/tvTitleSuccess"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/size_max"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Send Request Successfully" />

        <TextView
            android:id="@+id/tvContentSuccessfully"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_min"
            android:layout_margin="@dimen/size_medium"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:lineHeight="@dimen/size_medium"
            android:text="Please wait for the notification to accept the request from the school." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSuccessToHome"
            android:background="@drawable/background_purple_not_shape"
            android:textColor="@color/white"
            android:layout_width="176dp"
            android:paddingRight="@dimen/size_medium"
            android:layout_height="48dp"
            android:drawableRight="@drawable/ic_trending_flat"
            android:drawableTint="@color/white"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            android:text="Go to home" />
    </LinearLayout>
</LinearLayout>